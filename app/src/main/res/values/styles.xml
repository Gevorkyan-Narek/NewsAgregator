<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheetLabel">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BottomSheetLinks">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NewsItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:textSize">25sp</item>
        <item name="tabIndicatorColor">@android:color/black</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
    </style>
</resources>